{
  "name": "authpal",
  "version": "1.5.4",
  "description": "An authentication and authorization library for express applications and clients",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "prepare": "rm -rf lib && tsc",
    "deploy": "npm version patch && npm publish",
    "test": "npm run test-server && npm run test-client",
    "test-server": "ts-node node_modules/jasmine/bin/jasmine --reporter=jasmine-ts-console-reporter --config=jasmine.server.json",
    "test-client": "ts-node node_modules/jasmine/bin/jasmine --reporter=jasmine-ts-console-reporter --config=client/jasmine.client.json"
  },
  "files": [
    "lib/**/*.js",
    "lib/**/*.d.ts"
  ],
  "author": "eltharynd",
  "keywords": [
    "node",
    "nodejs",
    "node.js",
    "express",
    "passport",
    "typescript",
    "auth",
    "authentication",
    "authorization",
    "secure",
    "jwt",
    "security",
    "server",
    "server side"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/eltharynd/authpal"
  },
  "license": "ISC",
  "dependencies": {
    "cookie": "^0.5.0",
    "jsonwebtoken": "^8.5.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "rxjs": "^7.5.6",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/cookie": "^0.5.1",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.13",
    "@types/jasmine": "^4.0.3",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^18.19.8",
    "@types/passport": "^1.0.10",
    "@types/passport-jwt": "^3.0.6",
    "@types/passport-local": "^1.0.34",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "body-parser": "^1.20.0",
    "cookie-parser": "^1.4.6",
    "express": "^4.18.1",
    "jasmine": "^4.3.0",
    "jasmine-supertest": "^1.0.0",
    "jasmine-ts-console-reporter": "^3.1.1",
    "supertest": "^6.2.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  }
}
